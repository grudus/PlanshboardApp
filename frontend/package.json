{
  "name": "planshboard-app",
  "description": "Web platform for managing board game results and tracking gamers' progress",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "cd .. && husky install frontend/.husky",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test:dev": "react-scripts test",
    "test": "CI=true react-scripts test --watch-all false",
    "eject": "react-scripts eject",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --fix",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
